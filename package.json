{
  "name": "hodei-packages-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "lint:backend": "cd backend && gradle ktlintCheck --no-daemon",
    "format:backend": "cd backend && gradle ktlintFormat --no-daemon",
    "test:backend": "cd backend && gradle test --no-daemon",
    "build:backend": "cd backend && gradle build --no-daemon",
    "lint:frontend": "cd frontend && npm run lint",
    "format:frontend": "cd frontend && npm run format",
    "format:check:frontend": "cd frontend && npm run format:check",
    "test:frontend": "cd frontend && npm run test",
    "build:frontend": "cd frontend && npm run build",
    "start:frontend": "cd frontend && npm start",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "format": "npm run format:backend && npm run format:frontend",
    "test": "npm run test:backend && npm run test:frontend",
    "build": "npm run build:backend && npm run build:frontend"
  }
}